<%- include('header'); -%>
<div>
		<h1 class="city-location"><%= city %></h1>
	</div>

	<div class="container">
		<div class="information">
			<div class="info">
				<h1 class="temp"><%= normalTemp %>째</h1>
				<p class="apparent-temp">feels like <%= apparentTemp %>째</p>		
			</div>

			<div class="extra-info">
				<h2 class="description"><%= Description %></h2>
				<img src='<%= iconUrl %>' class="icon">
			</div>

			<div class="other-info">
				<p class="mini">Minimum temperature - <%= mnTemp %>째</p>
				<p class="mini">Maximum temperature - <%= mxTemp %>째</p>
				<p class="mini">Pressue - <%= pressure %> mbar</p>
				<p class="mini">Humidity - <%= humid %>%</p>
			</div>
		</div>

		<div class="timezone">
			<p class="mini">Visibility - <%= vison %> meters</p>
			<p class="mini">Timezone - <%= zone %></p>
			<p class="mini">Wind speed - <%= speed %> kmph, <%= degrees %> degrees</p>
			<p class="mini">Sunrise - <%= sunrise %></p>
			<p class="mini">Sunset - <%= sunset %></p>
		</div>
	</div>
<%- include('footer'); -%>